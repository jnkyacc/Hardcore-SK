<ThingDefs>


	<ThingDef ParentName="ApparelBase">
		<defName>CryptosleepBodysuit</defName>
		<label>Cryptosleep Bodysuit</label>
		<description>A full body suit designed for extended cryptosleep. You can rest easy knowing your body won't be naked for hundreds or thousands of years while you sleep.</description>
		<graphicData>
		<texPath>Things/Pawn/Humanlike/Apparel/ShirtBasic/ShirtBasic</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		<color>(255,181,4)</color>
		</graphicData>
		<CostList>
			<Synthread>70</Synthread>
		</CostList>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1</Flammability>
			<Insulation_Heat>3</Insulation_Heat>
			<Insulation_Cold>-10</Insulation_Cold>
			<ArmorRating_Blunt>0.07</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.05</ArmorRating_Sharp>
			<ArmorRating_Heat>0.4</ArmorRating_Heat>
			<ArmorRating_Electric>0.4</ArmorRating_Electric>
			<Weight>1</Weight>
			<Bulk>4</Bulk>
			<WornWeight>2</WornWeight>
			<WornBulk>1</WornBulk>
			</statBases>
		<equippedStatOffsets>
			<CarryBulk>10</CarryBulk>
			<MoveSpeed>-0.02</MoveSpeed>
		</equippedStatOffsets>
		<apparel>
		  <bodyPartGroups>
			<li>Torso</li>
			<li>Shoulders</li>
			<li>Arms</li>		
			<li>Legs</li>
		  </bodyPartGroups>
		  <worngraphicPath>Things/Pawn/Humanlike/Apparel/ShirtBasic/ShirtBasic</worngraphicPath>
		  <layers>
			<li>OnSkin</li>
		  </layers>
			<commonality>1</commonality>
		<tags>
			<li>CryptosleepSpacer</li>
		</tags>
		</apparel>	
		<thingCategories>
			<li>FullBodySuitsCat</li>
		</thingCategories>
	</ThingDef>

