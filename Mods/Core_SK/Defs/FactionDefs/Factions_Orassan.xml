<?xml version="1.0" encoding="utf-8" ?>
<FactionDefs>

  <FactionDef>
		<defName>Orassan</defName>
		<label>Orassan Enclave</label>
    <description>A small community of Orassans.\n\nThese people have come here to expand the borders of their empire.</description>
    <pawnsPlural>Orassans</pawnsPlural>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <raidCommonality>90</raidCommonality>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>Elder</leaderTitle>
    <startingGoodwill>
      <min>10</min>
      <max>40</max>
    </startingGoodwill>
		<factionNameMaker>NamerFactionOutlander</factionNameMaker>
		<techLevel>Industrial</techLevel>
		<backstoryCategory>Civil</backstoryCategory>
		<hairTags>
			<li>Orassan</li>
		</hairTags>
    <naturalColonyGoodwill>
      <min>-60</min>
      <max>0</max>
    </naturalColonyGoodwill>
    <caravanTraderKinds>
      <li>Caravan_Outlander_BulkGoods</li>
      <li>Caravan_Outlander_CombatSupplier</li>
      <li>Caravan_Outlander_Exotic</li>
      <li>Caravan_Outlander_PirateMerchant</li>
    </caravanTraderKinds>
    <visitorTraderKinds>
      <li>Visitor_Outlander_Standard</li>
    </visitorTraderKinds>
    <allowedArrivalTemperatureRange>
      <min>-50</min>
      <max>35</max>
    </allowedArrivalTemperatureRange>
    <apparelStuffFilter>
	<categories>
		<li>Leathers</li>
	</categories>
    <thingDefs>
        <li>WoodPlank</li>
        <li>Cloth</li>
        <li>MuffaloWool</li>
        <li>CamelHair</li>
        <li>AlpacaWool</li>
		<li>WeedCloth</li>
        <li>RamWool</li>
        <li>CopperBar</li>
		<li>Bronze</li>
        <li>SteelBar</li>
        <li>SilverBar</li>
        <li>AluminiumBar</li>
    </thingDefs>
    </apparelStuffFilter>
    <pawnGroupMakers>
      <li Class="PawnGroupMaker_Normal">
	    <commonality>100</commonality>
		<disallowedStrategies>
		  <li>ImmediateAttack</li>
          <li>StageThenAttack</li>
          <li>ImmediateAttackSappers</li>
          <li>Siege</li>		  
        </disallowedStrategies>
        <options>
          <OrassanVillager>250</OrassanVillager>
          <OrassanWindrunner>100</OrassanWindrunner>
          <OrassanAdventurer>120</OrassanAdventurer>
          <OrassanElder>30</OrassanElder>
          <OrassanHunter>110</OrassanHunter>
        </options>
      </li>
      <li Class="PawnGroupMaker_Normal">
        <commonality>30</commonality>
        <disallowedStrategies>
          <li>Siege</li>
        </disallowedStrategies>
        <options>
          <OrassanPredator>200</OrassanPredator>
        </options>
      </li>
      <li Class="PawnGroupMaker_Trader">
        <traders>
          <OrassanTrader>1</OrassanTrader>
        </traders>
        <carriers>
          <PackMuffalo>1</PackMuffalo>
        </carriers>
        <guards>
          <OrassanAdventurer>250</OrassanAdventurer>
          <OrassanHunter>100</OrassanHunter>
          <OrassanPredator>100</OrassanPredator>
        </guards>
      </li>
    </pawnGroupMakers>
    <homeIconPath>World/FactionHomes/DefaultHome</homeIconPath>
    <homeIconColor>(50,50,255)</homeIconColor>
  </FactionDef>

</FactionDefs>