<ThingDef ParentName="MealBase">
	<defName>Cigarillos</defName>
	<label>Cigarillos</label>
	<description>A pack of twenty cigarillos. Bet you can't smoke just one!</description>
    <graphicData>
	<texPath>Things/Item/Cigarillos</texPath>
	<graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<stackLimit>25</stackLimit>
	<statBases>
	  <MarketValue>10</MarketValue>
	  <DeteriorationRate>5</DeteriorationRate>
	</statBases>
	<tickerType>Rare</tickerType>
	<ingestible>
		   <foodType>Processed</foodType>
           <preferability>NeverForNutrition</preferability>
		   <nutrition>0.01</nutrition>
           <joy>0.2</joy>
           <joyKind>Meditative</joyKind>
           <maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
           <soundEat>Harvest_Standard</soundEat>
		   <isPleasureDrug>true</isPleasureDrug>
	  <hediffGivers>
		<li>
		<chance>1</chance>
		<hediffDef>Tobacco</hediffDef>
		</li>
	  </hediffGivers>
	</ingestible>
    <thingCategories>
      <li>Drugs</li>
    </thingCategories>
</ThingDef>


