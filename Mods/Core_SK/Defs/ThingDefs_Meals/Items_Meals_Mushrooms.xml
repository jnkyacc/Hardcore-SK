<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef ParentName="ResBase">
    <defName>MushroomTincture</defName>
    <label>Mushroom Tincture</label>
    <description>A concentrated extract from mushrooms. A good, natural medicine source.</description>
    <thingClass>Medicine</thingClass>
    <graphicData>
    <texPath>Things/Item/Meal/Tincture</texPath>
    <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <statBases>
      	<MaxHitPoints>100</MaxHitPoints>
		<MedicalPotency>0.85</MedicalPotency>
		<DeteriorationRate>12</DeteriorationRate>
		<MarketValue>25</MarketValue>
    	<Flammability>5</Flammability>
        <Bulk>0.8</Bulk>
        <Weight>0.4</Weight>			
    </statBases>
    <stackLimit>25</stackLimit>
    <thingCategories>
      <li>Medicine</li>
    </thingCategories>
    <ingestible>
      <foodType>Fluid, Processed</foodType>
      <preferability>NeverForNutrition</preferability>
      <nutrition>0.3</nutrition>
      <joy>0.10</joy>
      <joyKind>Chemical</joyKind>
      <maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
      <soundEat>Ingest_Beer</soundEat>
      <isPleasureDrug>true</isPleasureDrug>
      <hediffGivers>
        <li>
          <chance>1</chance>
          <hediffDef>Alcohol</hediffDef>
        </li>
      </hediffGivers>
    </ingestible>
  </ThingDef>
  

