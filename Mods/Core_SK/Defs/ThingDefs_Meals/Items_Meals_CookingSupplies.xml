<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

   <ThingDef ParentName="MealRottable">
      <defName>Chocomilk</defName>
      <label>Chocolate Milk</label>
      <description>Chocolate added to milk.</description>
      <graphicData>
      <texPath>Things/Item/Meal/Meal_ChocoMilk</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
      <statBases>
         <DeteriorationRate>10</DeteriorationRate>
         <MarketValue>15</MarketValue>     
         <Bulk>1.0</Bulk>
         <Weight>0.7</Weight>		 
      </statBases>
      <ingestible>
		 <foodType>Fluid, Meal, Processed</foodType>
         <preferability>MealSimple</preferability>
         <nutrition>0.4</nutrition>
         <joy>0.3</joy>
         <eatEffect>EatVegetarian</eatEffect>
         <soundEat>Meal_Eat</soundEat>
      </ingestible>
   </ThingDef>

    <ThingDef ParentName="MealRottable">
      <defName>Caramel</defName>
      <label>Caramel</label>
      <description>A sweet candy made from sugar.</description>
      <graphicData>
      <texPath>Things/Item/Meal/Meal_Caramel</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
      <statBases>
         <DeteriorationRate>10</DeteriorationRate>
         <MarketValue>25</MarketValue>
         <WorkToMake>450</WorkToMake>
      </statBases>
		<thingCategories>
			<li>SweetMeals</li>
		</thingCategories>
      <ingestible>
        <foodType>Processed</foodType>
         <preferability>MealFine</preferability>
	     <isPleasureDrug>true</isPleasureDrug>
         <nutrition>0.02</nutrition>
         <joy>0.1</joy>
         <eatEffect>EatVegetarian</eatEffect>
         <soundEat>Meal_Eat</soundEat>
      </ingestible>
   </ThingDef>
   
<ThingDef ParentName="ResBase">
    <defName>Chocolate</defName>
    <label>Chocolate</label>
    <description>A delicious preparation of cocoa seeds ground together with sugar and vanilla. Very pleasurable to eat, but not very nutritious.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Chocolate</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
		<socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <MarketValue>2</MarketValue>
      <Flammability>1.0</Flammability>
    </statBases>
    <ingestible>
      <foodType>Processed</foodType>
      <preferability>DesperateOnly</preferability>
      <nutrition>0.02</nutrition>
      <joy>0.07</joy>
      <maxNumToIngestAtOnce>4</maxNumToIngestAtOnce>
      <soundEat>Meal_Eat</soundEat>
      <isPleasureDrug>true</isPleasureDrug>
    </ingestible>
	<thingCategories>
         <li>SweetMeals</li>
      </thingCategories>
  </ThingDef>

</ThingDefs>