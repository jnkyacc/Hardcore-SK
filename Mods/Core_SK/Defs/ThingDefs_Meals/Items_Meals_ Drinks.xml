<ThingDefs>

   <ThingDef ParentName="MealRottable">
      <defName>FruitYogurt</defName>
      <label>Fruit Yogurt</label>
      <description>A sweet treat made from milk and fruit.</description>
      <graphicData>
      <texPath>Things/Item/Meal/Meal_FruitYogurt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
      <statBases>
         <DeteriorationRate>10</DeteriorationRate>
         <MarketValue>25</MarketValue>
         <WorkToMake>750</WorkToMake>
         <Bulk>1.0</Bulk>
         <Weight>0.7</Weight>			 
      </statBases>
      <ingestible>
		 <foodType>Fluid, Meal, Processed</foodType>
         <preferability>MealFine</preferability>
         <nutrition>0.4</nutrition>
         <joy>0.42</joy>
         
         <eatEffect>EatVegetarian</eatEffect>
         <soundEat>Meal_Eat</soundEat>
      </ingestible>
   </ThingDef>

<ThingDef ParentName="MealBeverage">
      <defName>Cuptea</defName>
      <label>Cup of Tea</label>
      <description>A drink made from brewing tea leaves.</description>
      <graphicData>
      <texPath>Things/Item/Meal/cuptea</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
      <statBases>
         <DeteriorationRate>10</DeteriorationRate>
         <MarketValue>12</MarketValue>
         <WorkToMake>450</WorkToMake>
      </statBases>
		<thingCategories>
			<li>Energetics</li>
		</thingCategories>
    <stackLimit>10</stackLimit>
      <ingestible>
		   <foodType>Fluid, Processed</foodType>
		   <preferability>NeverForNutrition</preferability>
		   <nutrition>0.03</nutrition>
           <joy>0.2</joy>
           <joyKind>Social</joyKind>
           <maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
           <soundEat>Ingest_Beer</soundEat>
           <isPleasureDrug>true</isPleasureDrug>
	  <hediffGivers>
		<li>
		<chance>1</chance>
		<hediffDef>Caffeine</hediffDef>
		</li>
	  </hediffGivers>
      </ingestible>
   </ThingDef>

  <ThingDef ParentName="MealBeverage">
    <defName>CupSpectagoTea</defName>
