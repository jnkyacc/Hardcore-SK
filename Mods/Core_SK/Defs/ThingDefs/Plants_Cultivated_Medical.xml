      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <ingestible>
      <foodType>Plant</foodType>
      <preferability>NeverForNutrition</preferability>
      <nutrition>0.40</nutrition>
    </ingestible>
    <plant>
      <sowMinSkill>10</sowMinSkill>
      <sowResearchPrerequisites>
        <li>SK_MedicalCropsII</li>
      </sowResearchPrerequisites>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <dieIfLeafless>true</dieIfLeafless>
      <shootsSeeds>false</shootsSeeds>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>aloe</harvestedThingDef>
      <harvestDestroys>true</harvestDestroys>
      <harvestYield>4</harvestYield>
      <topWindExposure>0.1</topWindExposure>
      <growDays>5.75</growDays>
      <fertilityMin>1.35</fertilityMin>
      <fertilityFactorGrowthRate>1.5</fertilityFactorGrowthRate>
      <visualSizeRange>
        <min>0.25</min>
