<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

  <RecipeDef>
    <defName>MakeSugar</defName>
    <label>Grind Sugar</label>
    <description>Grind Sugarcanes into useable Sugar. Produces 3.</description>
    <jobString>Grinding Sugarcane into Sugar.</jobString>
    <workAmount>1100</workAmount>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <products>
       <Sugar>3</Sugar>
    </products>
    <ingredients>
       <li>
          <filter>
             <thingDefs>
                <li>Rawsugarcane</li>
             </thingDefs>
          </filter>
          <count>5</count>
       </li>
    </ingredients>
    <fixedIngredientFilter>
       <thingDefs>
          <li>Rawsugarcane</li>
       </thingDefs>
    <specialFiltersToDisallow>
      <li>AllowRotten</li>
    </specialFiltersToDisallow>
    </fixedIngredientFilter>
		<skillRequirements>
			<li>
				<skill>Cooking</skill>
				<minLevel>2</minLevel>
			</li>
		</skillRequirements>
    <workSkill>Cooking</workSkill>
    <researchPrerequisite>SK_TropicalCropsI</researchPrerequisite>
   </RecipeDef>

   
  <RecipeDef>
    <defName>MakeFlour</defName>
    <label>Grind Flour</label>
    <description>Grind Wheat, Corn, Rice or Oats into Flour. Produces 8.</description>
    <jobString>Grinding Flour.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
      <effectWorking>Cook</effectWorking>
      <workAmount>900</workAmount>
       <soundWorking>Recipe_CookMeal</soundWorking>
       <allowMixingIngredients>true</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Rawwheat</li>
            <li>RawCorn</li>
            <li>RawRice</li>
            <li>Rawoats</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Rawwheat</li>
        <li>RawCorn</li>
        <li>RawRice</li>
        <li>Rawoats</li>
      </thingDefs>
        <specialFiltersToDisallow>
          <li>AllowRotten</li>
        </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <products>
      <Flour>8</Flour>
    </products>
		<skillRequirements>
			<li>
				<skill>Cooking</skill>
				<minLevel>2</minLevel>
			</li>
		</skillRequirements>
    <workSkill>Cooking</workSkill>
    <researchPrerequisite>SK_CerealsI</researchPrerequisite>
  </RecipeDef>
  
  
