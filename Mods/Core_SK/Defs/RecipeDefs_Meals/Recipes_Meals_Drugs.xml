	<description>Gathers a collection of herbs into bunches. Produces 5.</description>
	<jobString>Gathering Herb Collections.</jobString>
	<workSpeedStat>PlantWorkSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
        <soundWorking>Recipe_Tailor</soundWorking>
        <allowMixingIngredients>true</allowMixingIngredients>
	<workAmount>1500</workAmount>
          <targetCountAdjustment>1</targetCountAdjustment>
	<ingredients>
	  <li>
	    <filter>
	      <thingDefs>
	        <li>WildRose</li>
	      </thingDefs>
	    </filter>
	    <count>3</count>
	  </li>
	  <li>
	    <filter>
	      <thingDefs>
	        <li>Hypericum</li>
	      </thingDefs>
	    </filter>
	    <count>3</count>
	  </li>
	  <li>
	    <filter>
	      <thingDefs>
	        <li>MintLeaves</li>
	      </thingDefs>
	    </filter>
	    <count>3</count>
	  </li>
