<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

 	<RecipeDef Name="Fluffy_CookCatFood">
		<defName>Fluffy_CookCatFood</defName>
		<label>Make Cat Food</label>
		<description>Creates Cat Food from raw meat and plant ingredients. Your cats are guaranteed to love it! Produces 20.</description>
		<jobString>Making Cat Food.</jobString>
    	<workAmount>100</workAmount>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<efficiencyStat>ButcheryFleshEfficiency</efficiencyStat>
	    <effectWorking>ButcherFlesh</effectWorking>
	    <soundWorking>Recipe_ButcherCorpseFlesh</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>   
     	<recipeUsers>
       		<li>ElectricStove</li>
			<li>FueledStove</li>
       		<li>TableButcher</li>
       	</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
						<li>AnimalProductRaw</li>
					</categories>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>PlantFoodRaw</li>
					</categories>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<products>
			<Fluffy_CatFood>20</Fluffy_CatFood>
		</products>
		<fixedIngredientFilter>
			<categories>
				<li>FoodRaw</li>
			</categories>
			<disallowedSpecialFilters>
				<li>AllowRotten</li>
				<li>AllowPlantFood</li>
			</disallowedSpecialFilters>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<categories>
				<li>FoodRaw</li>
			</categories>
			<exceptedThingDefs>
				<li>Human_Meat</li>
			</exceptedThingDefs>
		</defaultIngredientFilter>
		<skillRequirements>
			<li>
				<skill>Cooking</skill>
				<minLevel>2</minLevel>
			</li>
		</skillRequirements>
		<workSkill>Cooking</workSkill>
    <researchPrerequisite>SK_LivestockII</researchPrerequisite>
	</RecipeDef>
	
	
		<RecipeDef>
		<defName>MakeSilage</defName>
		<label>Make Silage</label>
		<description>Make Silage from Hay and plant ingredients for animal food. It is more nutritional than hay. Produces 20.</description>
		<jobString>Making Silage.</jobString>
		<workSpeedStat>BrewingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>300</workAmount>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>PlantFoodRaw</li>		
					</categories>
				</filter>
				<count>20</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Hay</li>
					</thingDefs>
				</filter>
				<count>60</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
					<categories>
						<li>ExtraPlantFoodRaw</li>
						<li>BasicPlantFoodRaw</li>		
					</categories>
			<thingDefs>
				<li>Hay</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Silage>20</Silage>
		</products>
		<workSkill>Cooking</workSkill>
  		<recipeUsers>
			<li>BioRefinery</li>
		</recipeUsers>
    <researchPrerequisite>SK_LivestockII</researchPrerequisite>
	</RecipeDef>

</RecipeDefs>