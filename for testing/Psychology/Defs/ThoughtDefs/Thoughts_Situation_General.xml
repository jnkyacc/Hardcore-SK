<?xml version="1.0" encoding="utf-8" ?>
<Thoughts>

  <ThoughtDef>
    <defName>ApparelDamaged</defName>
    <workerClass>ThoughtWorker_ApparelDamaged</workerClass>
    <nullifyingTraits>
      <li>Prude</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>wearing worn-out apparel</label>
        <description>My outfit is looking pretty bad. Can't I get something decent to wear?</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
      <li>
        <label>wearing tattered apparel</label>
        <description>I'm wearing a tattered piece of trash. Can't I get something decent to wear?</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>ApparelDamagedPrude</defName>
    <workerClass>ThoughtWorker_ApparelDamaged</workerClass>
    <requiredTraits>
      <li>Prude</li>
    </requiredTraits>
    <stages>
      <li>
        <label>wearing worn-out apparel</label>
        <description>My outfit is looking pretty bad. It's getting revealing...</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
      <li>
        <label>wearing tattered apparel</label>
        <description>I'm wearing a tattered piece of trash. Everyone can see right through it!</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>EnvironmentDark</defName>
    <workerClass>ThoughtWorker_Dark</workerClass>
    <nullifyingTraits>
      <li>Photosensitive</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>in darkness</label>
        <description>I've been in the dark for a while. I don't like it.</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>EnvironmentDarkLightSensitive</defName>
    <workerClass>Psychology.ThoughtWorker_Light</workerClass>
    <requiredTraits>
      <li>Photosensitive</li>
    </requiredTraits>
    <stages>
      <li>
        <label>in darkness</label>
        <description>Ah... the comfort of darkness.</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
      <li>
        <label>in the light</label>
        <description>Ouch... that smarts a little.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
      <li>
        <label>in bright light</label>
        <description>My eyes! It hurts so much!</description>
        <baseMoodEffect>-15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
