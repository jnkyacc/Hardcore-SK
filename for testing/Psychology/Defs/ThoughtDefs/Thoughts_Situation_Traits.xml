<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThoughtDef>
    <defName>FeelingRandomBipolar</defName>
    <workerClass>Psychology.ThoughtWorker_RandomMoodBipolar</workerClass>
    <requiredTraits>
      <li>Bipolar</li>
    </requiredTraits>
    <stages>
      <li>
        <label>Feeling manic</label>
        <description>For no apparent reason, I just feel absolutely fantastic right now!</description>
        <baseMoodEffect>15</baseMoodEffect>
      </li>
      <li>
        <label>Feeling great</label>
        <description>For no apparent reason, I just feel great right now.</description>
        <baseMoodEffect>8</baseMoodEffect>
      </li>
      <li>
        <label>Feeling good</label>
        <description>For no apparent reason, I just feel good right now.</description>
        <baseMoodEffect>4</baseMoodEffect>
      </li>
      <li>
        <label>Feeling bad</label>
        <description>For no apparent reason, I just feel bad right now.</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
      <li>
        <label>Feeling terrible</label>
        <description>For no apparent reason, I just feel terrible right now.</description>
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
      <li>
        <label>Feeling depressive</label>
        <description>For no apparent reason, I just feel utterly miserable right now...</description>
        <baseMoodEffect>-15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>PanicAttack</defName>
    <workerClass>Psychology.ThoughtWorker_PanicAttack</workerClass>
    <requiredTraits>
      <li>Anxiety</li>
    </requiredTraits>
    <stages>
      <li>
        <label>having a panic attack</label>
        <description>Get away from me! I need to breathe!</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>Codependency</defName>
    <workerClass>Psychology.ThoughtWorker_Codependency</workerClass>
    <requiredTraits>
      <li>Codependent</li>
    </requiredTraits>
    <stages>
      <li>
        <label>feeling alone</label>
        <description>I'm so lonely... I miss having a significant other.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
      <li>
        <label>in a codependent relationship</label>
        <description>I love my partner. I couldn't live without them.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
      <li>
        <label>in a codependent marriage</label>
        <description>I love my spouse. I would die without them.</description>
        <baseMoodEffect>8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>Outdoorsy</defName>
    <workerClass>Psychology.ThoughtWorker_Outdoorsy</workerClass>
    <requiredTraits>
      <li>Outdoorsy</li>
    </requiredTraits>
    <stages>
      <li>
        <label>in the open</label>
        <description>I like feeling the sky above me.</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
      <li>
        <label>in the open</label>
        <description>Ahhh, the great outdoors!</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>Pluviophile</defName>
    <workerClass>Psychology.ThoughtWorker_Pluviophile</workerClass>
    <requiredTraits>
      <li>Pluviophile</li>
    </requiredTraits>
    <stages>
      <li>
        <label>raining outside</label>
        <description>I like the sound of the rain beating down above me.</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
      <li>
        <label>in the rain</label>
        <description>The rain is so relaxing. I don't mind getting wet.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>PartyHard</defName>
    <workerClass>Psychology.ThoughtWorker_PartyHard</workerClass>
    <requiredTraits>
      <li>PartyAnimal</li>
    </requiredTraits>
    <stages>
      <li>
        <label>partying hard</label>
        <description>I loooove to party!</description>
        <baseMoodEffect>20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
</Defs>